   <script>
     $( document ).ready(function() {
       var cnt = 0;
       var animation = [ "hinge", "flip", "rollIn","rollOut", "lightSpeedOut",
       "shake", "rubberBand", "wobble" ,"fadeInUpBig", "swing", "jello",
       "fadeOut", "zoomIn", "zoomOut", "zoomInLeft", "zoomOutRight", "tada"];

       // add the "animateCss" to JQuery to extend it
       $.fn.extend({
         animateCss: function (animationName) {
           var animationEnd = 'webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend';
           this.addClass('animated ' + animationName).one(animationEnd, function() {
             $(this).removeClass('animated ' + animationName);
           });
         }
       });

       //start the show
       $('#myCarousel').carousel({ interval: 3000 });﻿
       $('#titleBar').animateCss('flip');﻿
       $('#pic1').animateCss('bounceInLeft');﻿
       $('#pic2').animateCss('bounceInLeft');﻿


       $('.paragraphText').animateCss('bounceInRight');﻿
       $('.slideShow1').animateCss('bounceInLeft');﻿

       $('.heading1').animateCss('infinite pulse');﻿
       $('.heading2').animateCss('infinite pulse');﻿


       $("#titleBar").on("click", function() {
         if (cnt < animation.length) {
           $("#titleBar").animateCss(animation[cnt]);
           console.log(animation[cnt]);
           console.log(cnt);
           ++cnt;
           if(cnt >= animation.length){
             cnt = 0;
           }
         }
       });

     }); //------ end of JQuery documaent Ready function -------
     </script>
